@page "/ResetPassword"

<AuthorizeView>
    <Authorized>

        <div class="card">
            <h4 class="card-header">Reset Password</h4>
            <div class="card-body">
                <EditForm Context="r" Model="ResetUserPassword" OnValidSubmit="Resetpass">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label>Password</label>
                        <InputText @bind-Value="ResetUserPassword.Password" type="password" class="form-control" />
                        <ValidationMessage For="@(() => ResetUserPassword.Password)" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <InputText @bind-Value="ResetUserPassword.NewPassword" type="password" class="form-control" />
                        <ValidationMessage For="@(() => ResetUserPassword.NewPassword)" />
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <InputText @bind-Value="ResetUserPassword.ConfirmNewPassword" type="password" class="form-control" />
                        <ValidationMessage For="@(() => ResetUserPassword.ConfirmNewPassword)" />
                    </div>
                    <button href="ResetPassword" class="btn btn-primary">Reset</button>
                    <NavLink href="/" class="btn btn-link">Cancel</NavLink>
                    <br />
                    <div class="col-12 row" style="font-weight:bold; color:red">
                        @responseBody
                    </div>
                </EditForm>
            </div>

        </div>

    </Authorized>
    <NotAuthorized>
        The User is not authorized
    </NotAuthorized>
</AuthorizeView>