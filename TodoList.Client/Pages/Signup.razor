@page "/Signup"

<div class="card">
    <h4 class="card-header">Register</h4>
    <div class="card-body">
        <EditForm Model="registerUser" OnValidSubmit="RegisterUser">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>First Name</label>
                <InputText @bind-Value="registerUser.FirstName" class="form-control" />
                <ValidationMessage For="@(() => registerUser.FirstName)" />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <InputText @bind-Value="registerUser.LastName" class="form-control" />
                <ValidationMessage For="@(() => registerUser.LastName)" />
            </div>
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="registerUser.Username" class="form-control" />
                <ValidationMessage For="@(() => registerUser.Username)" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="registerUser.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => registerUser.Password)" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <InputText @bind-Value="registerUser.ConfirmPassword" type="password" class="form-control" />
                <ValidationMessage For="@(() => registerUser.ConfirmPassword)" />
            </div>
            <button href="Signup" class="btn btn-primary">Register</button>
            <NavLink href="/" class="btn btn-link">Cancel</NavLink>
            <br />
            <div class="col-12 row" style="font-weight:bold; color:red">
                @responseBody
            </div>
        </EditForm>
    </div>

</div>